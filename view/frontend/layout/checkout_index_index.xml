<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Resursbank_Simplified::css/fetch-address.css" />
        <css src="Resursbank_Simplified::css/payment-method.css" />
    </head>

    <body>
        <referenceBlock name="content">
            <block
                class="Magento\Framework\View\Element\Template"
                template="Resursbank_Simplified::fetch-address.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Resursbank\Simplified\ViewModel\FetchAddress
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="content">
            <referenceBlock name="checkout.root">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="checkout" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="steps" xsi:type="array">
                                        <item name="children" xsi:type="array">
                                            <item name="shipping-step" xsi:type="array">
                                                <item name="children" xsi:type="array">
                                                    <item name="shippingAddress" xsi:type="array">
                                                        <item name="children" xsi:type="array">
                                                            <item name="resursbank-simplified-fetch-address" xsi:type="array">
                                                                <item name="component" xsi:type="string">
                                                                    Resursbank_Simplified/js/view/fetch-address
                                                                </item>
                                                                <item name="displayArea" xsi:type="string">before-fields</item>
                                                                <item name="sortOrder" xsi:type="string">0</item>
                                                            </item>
                                                            <item name="shipping-address-fieldset" xsi:type="array">
                                                                <item name="children" xsi:type="array">
                                                                    <item name="resursbank-simplified-telephone-validation" xsi:type="array">
                                                                        <item name="component" xsi:type="string">
                                                                            Resursbank_Simplified/js/view/telephone-validation
                                                                        </item>
                                                                        <item name="sortOrder" xsi:type="string">120</item>
                                                                        <item name="config" xsi:type="array">
                                                                            <item name="deps" xsi:type="array">
                                                                                <item name="0" xsi:type="string">checkout.steps.shipping-step.shippingAddress.shipping-address-fieldset.country_id</item>
                                                                                <item name="1" xsi:type="string">checkout.steps.shipping-step.shippingAddress.shipping-address-fieldset.telephone</item>
                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                            <item name="billing-step" xsi:type="array">
                                                <item name="children" xsi:type="array">
                                                    <item name="payment" xsi:type="array">
                                                        <item name="children" xsi:type="array">
                                                            <item name="renders" xsi:type="array">
                                                                <item name="children" xsi:type="array">
                                                                    <item name="resursbank-simplified" xsi:type="array">
                                                                        <item name="component" xsi:type="string">
                                                                            Resursbank_Simplified/js/view/payment/method-list
                                                                        </item>
                                                                        <item name="methods" xsi:type="array">
                                                                            <!--
                                                                            We need to define payment methods here so
                                                                            that our component will render and methods
                                                                            be added to the checkout page. However, our
                                                                            methods are dynamic and will be added with
                                                                            a plugin instead.
                                                                            -->
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
